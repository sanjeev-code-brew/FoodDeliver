<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/ivRestaurent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <include
        android:id="@+id/incLayout"
        layout="@layout/header_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRestName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_eight"
        android:ellipsize="end"
        android:text="Starbucks"
        android:textColor="@color/white"
        android:textSize="@dimen/text_extra_medium"
        app:layout_constraintBottom_toTopOf="@+id/tvItemName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_eight"
        android:layout_marginBottom="@dimen/margin_twelve"
        android:ellipsize="end"
        android:text="Coffee and Sweets"
        android:textColor="@color/white"
        android:textSize="@dimen/text_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_eight"
        android:background="@drawable/rounded_rec_green"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="star 4.0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_extra_small"
        app:layout_constraintBottom_toTopOf="@+id/tvTime"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_eight"
        android:layout_marginBottom="@dimen/margin_twelve"
        android:text="15-30 mins"
        android:textColor="@color/white"
        android:textSize="@dimen/text_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
